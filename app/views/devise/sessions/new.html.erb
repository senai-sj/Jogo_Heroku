<div id="subheader">Log in</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

 <div class="container">
  
    <%= f.label :login, "Login" %>
    <%= f.text_field :username, required: true, autofocus: true, autocomplete: "username" %>
    
    
    <%= f.label :senha, "Senha" %>
    <%= f.password_field :password, required: true, autocomplete: "current-password" %>
   
</div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Lembrar Senha" %>
    </div>
    <br>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in"%>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
